# --- Application ---
APP_NAME=Project Face
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# --- Database ---
POSTGRES_USER=aeo_user
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=project_face_db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://aeo_user:CHANGE_ME_TO_SECURE_PASSWORD@localhost:5432/project_face_db

# --- Redis ---
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# --- Authentication ---
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING
